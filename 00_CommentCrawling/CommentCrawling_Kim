import sys
sys.path.insert(0,'/usr/lib/chromium-browser/chromedriver')

from selenium import webdriver
from selenium.webdriver.chrome.options import Options
from selenium.webdriver.common.by import By
import time

# Chrome 옵션 설정
chrome_options = Options()
chrome_options.add_argument('--headless') # 화면 없이 실행
chrome_options.add_argument('--no-sandbox')
chrome_options.add_argument('--disable-dev-shm-usage')

!pip install selenium
!pip install chromedriver-autoinstaller

import chromedriver_autoinstaller
from selenium import webdriver
from selenium.webdriver.chrome.options import Options
from selenium.webdriver.common.by import By
import time

# chromedriver-autoinstaller를 사용해 자동으로 chromedriver 설치
chromedriver_autoinstaller.install()

# Chrome 옵션 설정
chrome_options = Options()
chrome_options.add_argument('--headless')
chrome_options.add_argument('--no-sandbox')
chrome_options.add_argument('--disable-dev-shm-usage')

# Chrome 드라이버 초기화, 여기서는 'chromedriver' 경로를 명시적으로 지정하지 않습니다.
driver = webdriver.Chrome(options=chrome_options)

# 웹 페이지 접속
driver.get("https://www.bomtoon.com/comment/star_track")

# 페이지 로딩을 기다립니다.
time.sleep(3)

# 댓글 데이터를 가져옵니다. 실제 사이트 구조에 따라 수정이 필요합니다.
comments = driver.find_elements(By.CSS_SELECTOR, '.comment_area p.comment_text')
for comment in comments:
    print(comment.text)

# 드라이버 종료
driver.quit()


# 댓글 데이터를 가져옵니다. 실제 사이트 구조에 따라 수정이 필요합니다.
comments = driver.find_elements(By.CSS_SELECTOR, '.comment_area p.comment_text')
for comment in comments:
    print(comment.text)


# Chrome 드라이버 초기화
driver = webdriver.Chrome('chromedriver',options=chrome_options)

